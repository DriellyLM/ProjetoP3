<h1>Listar Cargos dos Funcionários</h1>

<table>
  <thead>
    <tr>
      <th>Cargo Funcionario</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cargofuncionarios.each do |cargofuncionario| %>
      <tr>
        <td><%= cargofuncionario.cargofuncionario %></td>
        <td><%= link_to 'Ver', cargofuncionario %></td>
        <td><%= link_to 'Editar', edit_cargofuncionario_path(cargofuncionario) %></td>
        <td><%= link_to 'Excluir', cargofuncionario, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

