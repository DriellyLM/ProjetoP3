<h1>Listar Telefones dos Funcionários</h1>

<table>
  <thead>
    <tr>
      <th>Número do Telefone</th>
      <th>Funcionário</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @telefonefuncionarios.each do |telefonefuncionario| %>
      <tr>
        <td><%= telefonefuncionario.numerotelefone %></td>
        <td><%= telefonefuncionario.funcionario.nome %></td>
        <td><%= link_to 'Ver', telefonefuncionario %></td>
        <td><%= link_to 'Editar', edit_telefonefuncionario_path(telefonefuncionario) %></td>
        <td><%= link_to 'Excluir', telefonefuncionario, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar Novo Telefone de Funcionário', new_telefonefuncionario_path %>
